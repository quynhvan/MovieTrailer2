<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_viewpager"
    android:padding="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_anh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_cast"

        app:layout_constraintTop_toBottomOf="@id/iv_anh"
        app:layout_constraintLeft_toLeftOf="@id/iv_anh"
        app:layout_constraintRight_toRightOf="@id/iv_anh"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/textColor"
        android:lines="2"/>
</androidx.constraintlayout.widget.ConstraintLayout>