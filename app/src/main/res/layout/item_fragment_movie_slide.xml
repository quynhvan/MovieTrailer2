<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_slide"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:alpha="1"
        android:scaleType="fitXY"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/iv_slide"
        android:background="@drawable/gradient_image_movie_top" />
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_slide"
        android:background="@drawable/gradient_movie_bottom" />
    <View
        android:layout_width="50dp"
        android:layout_height="250dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/gradient_right" />
    <View
        android:layout_width="50dp"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_slide"
        android:background="@drawable/gradient_left" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E2E2E2"
        android:textSize="22sp"
        android:fontFamily="@font/baskvill"

        app:layout_constraintBottom_toBottomOf="@id/iv_slide"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="15dp"/>
    <ImageView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_slide"
        android:id="@+id/iv_star"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_star_black"
        app:tint="@color/color_selected_bottom_nav"
        app:layout_constraintRight_toRightOf="@id/iv_slide"
        />
    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="37dp"
        app:layout_constraintTop_toTopOf="@id/iv_star"
        app:layout_constraintBottom_toBottomOf="@id/iv_star"/>


</androidx.constraintlayout.widget.ConstraintLayout>